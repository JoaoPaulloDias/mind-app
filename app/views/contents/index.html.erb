<%= link_to 'New Content', new_content_path%>
<h1>Joao Paullo 26/04/2001</h1> 
<h2>CONTENTS</h2>
<BR>

<%= form_tag(contents_path, method: :get) do %>
     <div class="form-group">
        <%= label_tag :tag%>
        <%= select_tag 'tags[]', options_for_select(current_user.tags.pluck(:name), params[:tags]), 
        { class: 'select2 form-control', multiple: 'multiple'} %>
     </div>


    <div class='actions'>
        <%= submit_tag('Search',class: 'btn btn-primary' ) %>
    </div>


<% end %>
<br>
<br>

<% @contents.each do |content|%>
<%= link_to 'Show', content_path(content)%>
<%= link_to 'Edit', edit_content_path(content)%>
<%= link_to 'Destroy', content_path(content) , method: :delete, data: { confirm: 'Are you sure?' }  %>
<strong>Title:</strong> <%= content.title %>
<strong>Descript:</strong> <%= content.description %>
<strong>Tag: </strong><%= content.tags.pluck(:name) .join(', ')%>
<br>
<% end %>